{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "devstream/aurelia/app/*": ["src/app/*"],
      "devstream/aurelia/lib/*": ["src/lib/*"],
      "devstream/aurelia/lib": ["src/lib/index"],
      "devstream/aurelia/store": ["src/store"],
      "devstream/aurelia/hooks/*": ["src/hooks/*"],
      "devstream/aurelia/types/*": ["src/types/*"],
      "devstream/aurelia/utils/*": ["src/utils/*"],
      "devstream/aurelia/utils": ["src/utils/index"],
      "devstream/aurelia/hooks": ["src/hooks/index"],
      "devstream/aurelia/types": ["src/types/index"],
      "devstream/aurelia/assets/*": ["src/assets/*"],
      "devstream/aurelia/features/*": ["src/features/*"],
      "devstream/aurelia/components/*": ["src/components/*"],
      "devstream/aurelia/pages/*": ["src/app/pages/*"],
      "devstream/aurelia/routes/*": ["src/app/pages/routes/*"]
    }
  },
  "include": ["src"]
}
